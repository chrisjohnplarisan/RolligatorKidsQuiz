<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.arkay.kidsgk.activity.MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/strip">
    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/one_fifty_dimen"
        android:id="@+id/relTop"
        android:background="@drawable/quiz_top1">
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/margin_140dp"
        android:layout_height="@dimen/margin_140dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:layout_marginBottom="@dimen/minus_twelve_margin"
        android:layout_alignBottom="@+id/relTop"/>

    <ImageButton
        android:layout_width="@dimen/sixty_dimen"
        android:layout_height="@dimen/sixty_dimen"
        android:background="@drawable/ic_setting"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/five_dimen"
        android:layout_marginRight="@dimen/five_dimen"
        android:id="@+id/btnSetting"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/relTop"
        android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/imgPlayQuiz"
        android:layout_height="@dimen/margin_140dp"
        android:background="@drawable/btn1"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/imgImageQuiz"
        android:layout_below="@+id/imgPlayQuiz"
        android:layout_height="@dimen/margin_140dp"
        android:background="@drawable/btn2"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/imgKidsGk"
        android:layout_below="@+id/imgImageQuiz"
        android:layout_height="@dimen/margin_140dp"
        android:background="@drawable/btn3"/>
    </RelativeLayout>

</RelativeLayout>
