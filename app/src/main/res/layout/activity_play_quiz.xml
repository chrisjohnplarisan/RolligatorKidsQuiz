<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/purple"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/strip"
        android:alpha="0.3"
        android:layout_height="match_parent">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_140dp"
        android:id="@+id/relTop"
        android:background="@drawable/quiz_top1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBack"
            android:layout_margin="@dimen/five_dimen"
            android:background="@drawable/back_prpl"/>
        <com.arkay.kidsgk.customviews.CustomMorkoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/purple"
            android:id="@+id/txtLevelName"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/ten_dimen"
            android:textSize="@dimen/twenty_text_size"
            android:text="@string/play_quiz"/>
        <RelativeLayout
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="@dimen/fifty_dimen"
            android:layout_alignParentRight="true"
            android:background="@drawable/totl_score"
            >
            <com.arkay.kidsgk.customviews.CustomMorkoTextView
                android:layout_width="wrap_content"
                android:text="20000"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:gravity="center"
                android:id="@+id/txtScore"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/eighty_dimen"
            android:layout_height="@dimen/eighty_dimen"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtLevelName"
            android:layout_marginTop="@dimen/ten_dimen"
            android:background="@drawable/level_score">
            <com.arkay.kidsgk.customviews.CustomMorkoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/twenty_text_size"
                android:id="@+id/txtNoOfQue"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:text=""/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/imgBack"
            android:layout_marginLeft="@dimen/ten_dimen"
            android:layout_marginRight="@dimen/ten_dimen"
            android:layout_marginTop="@dimen/fifty_dimen"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="@dimen/fifty_dimen"
                android:layout_height="@dimen/fifty_dimen"
                android:background="@drawable/ic_true">

                <com.arkay.kidsgk.customviews.CustomMorkoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/text_blue"
                    android:id="@+id/txtTrueQue"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/fifty_dimen"
                android:layout_height="@dimen/fifty_dimen"
                android:layout_alignParentRight="true"
                android:background="@drawable/wrong">

                <com.arkay.kidsgk.customviews.CustomMorkoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/text_blue"
                    android:id="@+id/txtWrongQue"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/relTop"
        android:layout_height="@dimen/dimen_180dp"
        android:layout_marginLeft="@dimen/twenty_margin"
        android:layout_marginRight="@dimen/twenty_margin"
        android:gravity="center"
        android:id="@+id/relQue"
        android:layout_marginTop="-27dp"
        android:background="@drawable/quiz_back"
        android:layout_centerHorizontal="true">

        <com.arkay.kidsgk.customviews.CustomMorkoTextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/fourtin_text_size"
            android:text=""/>
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/relQue"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/thrity_dimen"
            android:layout_marginLeft="@dimen/thrity_dimen"
            android:layout_marginTop="-8dp"
            android:layout_height="wrap_content">

            <com.arkay.kidsgk.customviews.CustomMorkoButton
                android:id="@+id/opA_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_centerVertical="true"
                android:text=""
                android:background="@drawable/rounded_circle"/>
            />
            <ImageView
                android:layout_width="@dimen/seventy_dimen"
                android:layout_height="@dimen/seventy_dimen"
                android:background="@drawable/option"
                android:elevation="2dp"
                android:id="@+id/img1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/relQue"
            android:layout_marginRight="@dimen/thrity_dimen"
            android:layout_marginLeft="@dimen/thrity_dimen"
            android:layout_height="wrap_content">

            <com.arkay.kidsgk.customviews.CustomMorkoButton
                android:id="@+id/opB_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_centerVertical="true"
                android:text=""
                android:background="@drawable/rounded_circle"/>
            <ImageView
                android:layout_width="@dimen/seventy_dimen"
                android:layout_height="@dimen/seventy_dimen"
                android:background="@drawable/option"
                android:elevation="2dp"
                android:id="@+id/img2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/thrity_dimen"
            android:layout_marginLeft="@dimen/thrity_dimen"
            android:layout_height="wrap_content">

            <com.arkay.kidsgk.customviews.CustomMorkoButton
                android:id="@+id/opC_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_circle"/>
            <ImageView
                android:layout_width="@dimen/seventy_dimen"
                android:layout_height="@dimen/seventy_dimen"
                android:background="@drawable/option"
                android:elevation="2dp"
                android:id="@+id/img3"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/relQue"
            android:layout_marginRight="@dimen/thrity_dimen"
            android:layout_marginLeft="@dimen/thrity_dimen"
            android:layout_height="wrap_content">

            <com.arkay.kidsgk.customviews.CustomMorkoButton
                android:id="@+id/opD_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_circle"/>
            <ImageView
                android:layout_width="@dimen/seventy_dimen"
                android:layout_height="@dimen/seventy_dimen"
                android:background="@drawable/option"
                android:elevation="2dp"
                android:id="@+id/img4"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>