<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gk_strip_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/strip"></FrameLayout>

    <RelativeLayout
        android:id="@+id/top_lyt"
        android:layout_width="@dimen/three_fifty_dimen"
        android:layout_height="@dimen/three_fifty_dimen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mius_30dp"
        android:background="@drawable/gk">

        <com.arkay.kidsgk.customviews.CustomMorkoTextView
            android:id="@+id/baloons_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_53dp"
            android:text="@string/balloons"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home_img"
            android:layout_width="@dimen/margin_150dp"
            android:layout_height="@dimen/margin_150dp"
            android:layout_below="@+id/baloons_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:src="@drawable/cristmus_image" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/gk_notes_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/minus_25dp"
        android:layout_marginTop="@dimen/margin_120dp"
        android:background="@drawable/gk_notes">

        <com.arkay.kidsgk.customviews.CustomMorkoTextView
            android:id="@+id/gk_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/back_level_img"
            android:layout_marginBottom="@dimen/ten_dimen"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/ten_dimen"
            android:maxLines="15"
            android:scrollbars="vertical"
            android:text="@string/crishmus_text"
            android:textColor="@color/color4"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/back_level_img"
            android:layout_width="@dimen/ninty_dimen"
            android:layout_height="@dimen/ninty_dimen"
            android:layout_alignLeft="@+id/gk_notes"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/gk_notes"
            android:layout_marginTop="@dimen/dimen_63dp"
            android:src="@drawable/level" />

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/margin_45dp"
            android:layout_height="@dimen/margin_45dp"
            android:layout_alignBottom="@+id/back_level_img"
            android:layout_alignEnd="@+id/back_level_img"
            android:layout_alignRight="@+id/back_level_img"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_24dp"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/next_level_img"
            android:layout_width="@dimen/ninty_dimen"
            android:layout_height="@dimen/ninty_dimen"
            android:layout_alignEnd="@+id/gk_notes"
            android:layout_alignRight="@+id/gk_notes"
            android:layout_alignTop="@+id/back_level_img"
            android:src="@drawable/level" />

        <ImageView
            android:id="@+id/next_img"
            android:layout_width="@dimen/margin_45dp"
            android:layout_height="@dimen/margin_45dp"
            android:layout_alignEnd="@+id/next_level_img"
            android:layout_alignRight="@+id/next_level_img"
            android:layout_alignTop="@+id/back_img"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

</RelativeLayout>